<h1>Manage Collaborators for Wiki: <%= link_to @wiki.title, @wiki %></h1>

<table class="table">
    <% @users.each do |user| %>
        <tr>
            <td><%= user.email %></td>
            <td>
                <% if @wiki.users.include?(user) %>
                  <%= link_to 'Remove as Collaborator', [@wiki, @wiki.collaborator_for(user)], method: :delete, class: 'btn btn-danger' %>
                <%else  %>
                 <%= link_to 'Add as Collaborator', wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: "btn btn-success" %>
                <% end %>
            </td>
        </tr>
    <% end %>
</table>



<div class="spaceman">
    <hr>
    <div id="main_links">
     <div><%= link_to 'Wiki list', wikis_path %></div>
     <div><%= link_to 'Home', root_path %></div>
    </div>
  </div>